<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrouns</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new CampGround</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% camp.forEach(function(campg){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campg.image %>">
                    <div class="caption">
                        <h4><%= campg.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campg.id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>    
        <% }); %>
    </div>
</div>
<%- include("../partials/footer") %>